        cout<<"a. 40    b. 42    c. 44   d. 46"<<endl;
        cout<<"Choose a or b or c or d"<<endl;
        cin>>option;
        if (option=='b' || option=='B'){
            score += 1;
        }
        else{
            score += 0;
        }
        cout<<"Q2. Which word is the odd one out ?"<<endl;
        cout<<"a. Tape   b. Cassette   c. Deck   d. Record"<<endl;
