        cout<<"Choose a or b or c or d"<<endl;
        cin>>option;
        if (option=='d' || option=='D'){
            score += 1;
        }
        else{
            score += 0;
        }
        cout<<"Q6. Which Shape does not belong to this group ? "<<endl;
        cout<<"a. Square   b. Rectangle   c. Circle   d. Triangle "<<endl;
        cout<<"Choose a or b or c or d"<<endl;
        cin>>option;
        if (option=='c' || option=='C'){
            score += 1;
        }
        else{
            score += 0;
        }
        cout<<"Q7. If all dogs are animals and all animals are living beings, are dogs living beings ?"<<endl;
        cout<<"a. Yes   b. No   c. Cannot Predict   d. None of above"<<endl;
        cout<<"Choose a or b or c or d"<<endl;
        cin>>option;
        if (option=='a' || option=='A'){
            score += 1;
        }
        else{
            score += 0;
        }
        cout<<"Q8. Solve the equation : 5x - 3 = 2. "<<endl;
        cout<<"a. 2   b. 1   c. 3   d. 0"<<endl;
        cout<<"Choose a or b or c or d"<<endl;
